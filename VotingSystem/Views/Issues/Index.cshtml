@model IEnumerable<VotingSystem.Models.Issue>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.VotesFor)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.VotesAgainst)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.VotesFor)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.VotesAgainst)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ElectionID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ElectionID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ElectionID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
